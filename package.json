{
  "name": "mach-vscode",
  "displayName": "Mach",
  "description": "Mach language support for VSCode",
  "version": "2.0.0",
  "publisher": "octalide",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./extension.js",
  "contributes": {
    "languages": [
      {
        "id": "mach",
        "aliases": [
          "Mach",
          "mach"
        ],
        "extensions": [
          ".mach"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mach",
        "scopeName": "source.mach",
        "path": "./syntaxes/mach.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "mach.restartServer",
        "title": "Mach: Restart Language Server"
      }
    ],
    "configuration": {
      "title": "Mach",
      "properties": {
        "mach.lspPath": {
          "type": "string",
          "default": "",
          "description": "Absolute path to the mach-lsp executable. Leave empty to use the sibling mach-lsp build in this workspace."
        }
      }
    }
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/octalide/mach-vscode"
  }
}
